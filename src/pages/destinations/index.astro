---
/**
 * Destinations Hub — /destinations/
 * Lists all destination states with storytelling intro and card grid.
 */
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '../../data/site';

const destinations = (await getCollection('destinations'))
  .sort((a, b) => (a.data.order ?? 0) - (b.data.order ?? 0));
---

<Layout
  title="Destinations — Tranquil Trail Travels"
  seoTitle="Explore Northeast India Destinations | Tranquil Trail Travels"
  seoDescription="Discover curated journeys through Assam, Arunachal Pradesh, Meghalaya & Nagaland. Premium travel experiences in Northeast India's most extraordinary landscapes."
>
  <main>
    <!-- Breadcrumbs -->
    <nav class="bg-white border-b border-stone-200" aria-label="Breadcrumb">
      <div class="container max-w-6xl mx-auto px-6 py-4">
        <ol class="flex items-center gap-2 text-sm text-stone-500">
          <li>
            <a href="/" class="hover:text-amber-600 transition-colors">Home</a>
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </li>
          <li>
            <span class="text-stone-800 font-medium" aria-current="page">Destinations</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative py-24 md:py-36 overflow-hidden" aria-label="Destinations overview">
      <!-- Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-stone-900 via-stone-800 to-amber-950"></div>

      <!-- Subtle texture -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 32px 32px;"></div>

      <!-- Warm glow accents -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-amber-600/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-72 h-72 bg-amber-500/10 rounded-full blur-3xl"></div>

      <div class="relative z-10 container max-w-4xl px-6 mx-auto text-center">
        <p class="chapter-number mb-4 animate-fade-in" style="animation-delay: 0.2s;">Destinations</p>
        <div class="chapter-divider mb-10 animate-fade-in" style="animation-delay: 0.4s;"></div>

        <h1 class="font-playfair text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-semibold text-white leading-tight animate-fade-in-up" style="animation-delay: 0.6s;">
          Discover <br class="hidden sm:block" />Northeast India
        </h1>

        <p class="mt-8 text-stone-300 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 1s;">
          Seven sisters, each with her own rhythm. Ancient monasteries perched on clouds, living bridges woven by time, and wildlife sanctuaries where dawn paints the grasslands gold. Choose a state. Begin a story.
        </p>
      </div>
    </section>

    <!-- Destinations Grid -->
    <section class="py-20 md:py-28 bg-stone-50" aria-label="All destinations">
      <div class="container max-w-6xl px-6 mx-auto">
        {destinations.length > 0 ? (
          <div class="grid gap-6 md:gap-8 sm:grid-cols-2">
            {destinations.map((destination, i) => (
              <a
                href={`/destinations/${destination.id}/`}
                class="group block bg-white border border-stone-200 p-8 md:p-10 hover:border-amber-500/50 hover:shadow-lg transition-all duration-300 animate-on-scroll"
                style={`transition-delay: ${i * 100}ms`}
              >
                <!-- State name -->
                <h2 class="font-playfair text-2xl md:text-3xl text-stone-900 font-medium group-hover:text-amber-700 transition-colors">
                  {destination.data.state}
                </h2>

                <!-- Tagline -->
                <p class="mt-3 text-stone-600 leading-relaxed">
                  {destination.data.tagline}
                </p>

                <!-- Best time badge -->
                <div class="mt-5 inline-flex items-center gap-2 text-sm text-stone-500">
                  <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span>Best: {destination.data.bestTimeToVisit.months}</span>
                </div>

                <!-- Arrow link -->
                <div class="mt-6 flex items-center gap-2 text-amber-600 group-hover:gap-3 transition-all duration-300">
                  <span class="text-sm font-medium tracking-wide">Explore destination</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <p class="font-playfair text-2xl text-stone-600">Destinations coming soon.</p>
            <p class="mt-4 text-stone-500">We are curating extraordinary journeys across Northeast India.</p>
          </div>
        )}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative py-20 md:py-28 overflow-hidden" aria-label="Start your journey">
      <div class="absolute inset-0 bg-gradient-to-br from-stone-900 via-stone-800 to-amber-950"></div>
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 32px 32px;"></div>

      <div class="relative z-10 container max-w-3xl px-6 mx-auto text-center">
        <h2 class="font-playfair text-3xl md:text-4xl text-white font-medium animate-on-scroll">
          Not Sure Where to Begin?
        </h2>
        <p class="mt-6 text-stone-300 text-lg max-w-xl mx-auto leading-relaxed animate-on-scroll delay-100">
          Tell us what moves you and we will design a journey that is uniquely yours.
        </p>
        <div class="mt-10 animate-on-scroll delay-200">
          <a
            href={`https://wa.me/916002324880?text=${encodeURIComponent("Hello! I'd love to explore Northeast India. Could you help me choose a destination?")}`}
            target="_blank"
            rel="noopener noreferrer"
            class="whatsapp-btn"
            aria-label="Start a conversation on WhatsApp"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
            </svg>
            <span>Start a Conversation</span>
          </a>
        </div>
      </div>
    </section>
  </main>

  <!-- Scroll Animation Controller -->
  <script>
    const scrollObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    document.querySelectorAll('.animate-on-scroll, .chapter-reveal, .text-reveal, .scale-reveal').forEach(el => {
      scrollObserver.observe(el);
    });
  </script>
</Layout>
