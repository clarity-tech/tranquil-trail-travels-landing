---
import Layout from '../layouts/Layout.astro';
import HeroDawn from '../components/HeroDawn.astro';
import SevenSistersMap from '../components/SevenSistersMap.astro';
import CulturalMoments from '../components/CulturalMoments.astro';
import UniqueExperiences from '../components/UniqueExperiences.astro';
import ConsultationCTA from '../components/ConsultationCTA.astro';
import { siteConfig } from '../data/site';
---

<Layout title="Tranquil Trail Travels — Stories Written in Mist & Gold">
  <main>
    <!-- Chapter 1: At dawn in Kaziranga... -->
    <HeroDawn />

    <!-- Narrative bridge -->
    <section class="py-20 md:py-28 bg-white" aria-label="Introduction">
      <div class="container max-w-4xl px-6 mx-auto text-center">
        <div class="chapter-reveal">
          <div class="chapter-divider mb-10"></div>
          <p class="font-playfair text-2xl sm:text-3xl md:text-4xl text-stone-900 font-medium leading-snug">
            Northeast India is not a destination.<br />
            <span class="text-amber-700">It is an invitation.</span>
          </p>
          <p class="mt-8 text-stone-600 text-lg leading-relaxed max-w-2xl mx-auto">
            Seven sisters, each with her own language, landscape, and legend. We've spent years learning their stories — so we can help you discover your own.
          </p>
        </div>
      </div>
    </section>

    <!-- Chapter 2: Seven Sisters Map Reveal -->
    <SevenSistersMap />

    <!-- Chapter 3: Cultural Authenticity Moments -->
    <CulturalMoments />

    <!-- Chapter 4: Unique Experiences -->
    <UniqueExperiences />

    <!-- Social proof bridge -->
    <section class="py-20 md:py-24 bg-white" aria-label="Traveler testimonials">
      <div class="container max-w-6xl px-6 mx-auto">
        <div class="text-center mb-16 animate-on-scroll">
          <p class="chapter-number mb-4">Voices</p>
          <div class="chapter-divider mb-8"></div>
          <h2 class="font-playfair text-3xl md:text-4xl text-stone-900 font-medium">Fellow Travelers Speak</h2>
        </div>
        <div class="grid gap-8 md:gap-12 md:grid-cols-3">
          <!-- Testimonial 1 -->
          <div class="bg-stone-50 p-8 md:p-10 animate-on-scroll">
            <div class="text-amber-600 text-5xl font-playfair leading-none mb-4">&ldquo;</div>
            <p class="text-stone-600 leading-relaxed italic text-lg">An extraordinary journey through the heart of Northeast India. Every detail was perfectly curated — from the tea gardens of Assam to the monasteries of Tawang.</p>
            <div class="mt-8 pt-6 border-t border-stone-200">
              <p class="font-playfair text-stone-900 font-medium text-lg">Priya Sharma</p>
              <p class="text-stone-500 mt-1">Bangalore</p>
            </div>
          </div>
          <!-- Testimonial 2 -->
          <div class="bg-stone-50 p-8 md:p-10 animate-on-scroll delay-100">
            <div class="text-amber-600 text-5xl font-playfair leading-none mb-4">&ldquo;</div>
            <p class="text-stone-600 leading-relaxed italic text-lg">The cultural immersion was beyond our expectations. Sharing a meal with the Konyak people in Nagaland changed how we see travel forever.</p>
            <div class="mt-8 pt-6 border-t border-stone-200">
              <p class="font-playfair text-stone-900 font-medium text-lg">Rajesh &amp; Meena Iyer</p>
              <p class="text-stone-500 mt-1">Chennai</p>
            </div>
          </div>
          <!-- Testimonial 3 -->
          <div class="bg-stone-50 p-8 md:p-10 animate-on-scroll delay-200">
            <div class="text-amber-600 text-5xl font-playfair leading-none mb-4">&ldquo;</div>
            <p class="text-stone-600 leading-relaxed italic text-lg">Luxury travel with soul. The team understands that true luxury is access — to places, people, and moments you can't find in any guidebook.</p>
            <div class="mt-8 pt-6 border-t border-stone-200">
              <p class="font-playfair text-stone-900 font-medium text-lg">Anand Mehta</p>
              <p class="text-stone-500 mt-1">Mumbai</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Chapter 5: Your Story Begins (Consultation CTA) -->
    <ConsultationCTA />

    <!-- Footer -->
    <footer class="py-12 bg-stone-900 text-stone-400 border-t border-stone-800">
      <div class="container max-w-6xl mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
          <div class="text-center md:text-left">
            <p class="font-playfair text-white text-xl">{siteConfig.name}</p>
            <p class="mt-1">{siteConfig.tagline}</p>
          </div>
          <div class="flex items-center gap-4">
            <a
              href={siteConfig.contact.instagram}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on Instagram"
              class="flex items-center gap-2 px-4 py-2 border border-stone-600 rounded-full text-stone-300 hover:border-amber-500 hover:text-amber-500 transition-all duration-300"
            >
              <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              <span class="text-sm font-medium">Follow us</span>
            </a>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-stone-800 text-center text-sm">
          <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All Rights Reserved.</p>
        </div>
      </div>
    </footer>
  </main>

  <!-- Scroll Animation & Parallax Controller -->
  <script>
    // Intersection Observer for all scroll-triggered animations
    const scrollObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    // Observe all animated elements
    document.querySelectorAll('.animate-on-scroll, .chapter-reveal, .text-reveal, .scale-reveal, .slide-left, .slide-right').forEach(el => {
      scrollObserver.observe(el);
    });

    // Parallax effect (only if user hasn't opted for reduced motion)
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (!prefersReducedMotion) {
      const parallaxElements = document.querySelectorAll('.parallax-bg');

      if (parallaxElements.length > 0) {
        let ticking = false;

        function updateParallax() {
          const scrollY = window.scrollY;

          parallaxElements.forEach(el => {
            const parent = el.closest('.parallax-container') || el.parentElement;
            if (!parent) return;

            const rect = parent.getBoundingClientRect();
            const windowHeight = window.innerHeight;

            // Only update if element is in or near viewport
            if (rect.bottom >= -100 && rect.top <= windowHeight + 100) {
              const progress = (rect.top + rect.height) / (windowHeight + rect.height);
              const offset = (progress - 0.5) * 60; // Max 30px offset
              el.style.transform = `translateY(${offset}px)`;
            }
          });

          ticking = false;
        }

        window.addEventListener('scroll', () => {
          if (!ticking) {
            requestAnimationFrame(updateParallax);
            ticking = true;
          }
        }, { passive: true });
      }
    }
  </script>
</Layout>
