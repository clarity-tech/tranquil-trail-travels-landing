---
import '../styles/global.css';
import ChatWidget from '../components/ChatWidget.astro';
import { siteConfig } from '../data/site';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	canonicalUrl?: string;
	seoTitle?: string;
	seoDescription?: string;
	fullScreenHero?: boolean;
}

const {
	title,
	description = siteConfig.description,
	ogImage = '/og-image.jpg',
	canonicalUrl,
	seoTitle,
	seoDescription,
	fullScreenHero = false,
} = Astro.props;

const pageTitle = seoTitle || title;
const pageDescription = seoDescription || description;

const canonical = canonicalUrl || new URL(Astro.url.pathname, Astro.site).href;
const ogImageUrl = new URL(ogImage, Astro.site).href;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={pageDescription} />
		<meta name="generator" content={Astro.generator} />

		<!-- Canonical URL -->
		<link rel="canonical" href={canonical} />

		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:image" content={ogImageUrl} />
		<meta property="og:site_name" content={siteConfig.name} />
		<meta property="og:locale" content="en_IN" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={pageDescription} />
		<meta name="twitter:image" content={ogImageUrl} />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "TravelAgency",
			"name": siteConfig.name,
			"url": siteConfig.url,
			"description": siteConfig.description,
			"areaServed": siteConfig.destinations.map(d => ({ "@type": "State", "name": d.state })),
			"sameAs": [siteConfig.contact.instagram]
		})} />

		<!-- Google Fonts: Playfair Display + Inter (optimized weights) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Playfair+Display:wght@500;600&display=swap">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Playfair+Display:wght@500;600&display=swap" rel="stylesheet">
		<title>{pageTitle}</title>
		<slot name="head" />
	</head>
	<body class="bg-stone-50 font-inter text-stone-800">
		<!-- Site Navigation -->
		<header class:list={["fixed top-0 left-0 right-0 z-50 transition-all duration-300", !fullScreenHero && "bg-stone-900 shadow-lg"]} id="site-header" data-hero={fullScreenHero ? "true" : "false"}>
			<nav class="container max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
				<a href="/" class="font-playfair text-lg md:text-xl font-medium text-white hover:text-amber-400 transition-colors">
					Tranquil Trail
				</a>
				<div class="flex items-center gap-6 md:gap-8">
					<a href="/destinations/" class="text-sm tracking-wide text-stone-300 hover:text-amber-400 transition-colors">Destinations</a>
					<a
						href={`https://wa.me/919531189920?text=${encodeURIComponent("Hello! I'd like to plan a trip to Northeast India.")}`}
						target="_blank"
						rel="noopener noreferrer"
						class="hidden sm:inline-flex items-center gap-2 text-sm px-4 py-2 bg-amber-600 text-white hover:bg-amber-700 transition-colors rounded-sm"
					>
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
						</svg>
						Plan Your Trip
					</a>
				</div>
			</nav>
		</header>
		<script>
			// Header scroll behavior: transparent-to-solid only on hero pages
			const header = document.getElementById('site-header');
			if (header && header.dataset.hero === 'true') {
				const updateHeader = () => {
					if (window.scrollY > 50) {
						header.classList.add('bg-stone-900/95', 'backdrop-blur-sm', 'shadow-lg');
					} else {
						header.classList.remove('bg-stone-900/95', 'backdrop-blur-sm', 'shadow-lg');
					}
				};
				window.addEventListener('scroll', updateHeader, { passive: true });
				updateHeader();
			}
		</script>
		<div class={fullScreenHero ? '' : 'pt-16'}>
			<slot />
		</div>
		<ChatWidget />
	</body>
</html>
