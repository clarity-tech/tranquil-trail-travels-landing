---
/**
 * Chapter 5: "Your Story Begins" — Consultation Invite
 * WhatsApp-integrated consultation CTA with warm, inviting tone.
 * Consultation-first booking model.
 */
import { siteConfig } from '../data/site';

const whatsappNumber = siteConfig.contact.whatsapp.replace(/\D/g, '');
const whatsappMessage = encodeURIComponent("Hello! I'd love to experience Northeast India. Could we schedule a consultation to plan my journey?");
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
---

<section class="relative py-24 md:py-36 overflow-hidden" aria-label="Begin your journey">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-stone-900 via-stone-800 to-amber-950"></div>

  <!-- Subtle texture -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 32px 32px;"></div>

  <!-- Warm glow accent -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-amber-600/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-72 h-72 bg-amber-500/10 rounded-full blur-3xl"></div>

  <div class="relative z-10 container max-w-4xl px-6 mx-auto text-center">
    <!-- Chapter header -->
    <p class="chapter-number mb-4 chapter-reveal">Chapter Five</p>
    <div class="chapter-divider mb-10 chapter-reveal delay-100"></div>

    <!-- Narrative heading -->
    <h2 class="font-playfair text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-medium text-white leading-tight chapter-reveal delay-200">
      Your Story Begins <br class="hidden sm:block" />With a Conversation
    </h2>

    <p class="mt-8 text-stone-300 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed chapter-reveal delay-300">
      Every extraordinary journey starts with understanding what moves you. Tell us your dreams for Northeast India — we'll design a journey that's uniquely yours.
    </p>

    <!-- How it works — 3 steps -->
    <div class="grid sm:grid-cols-3 gap-8 mt-16 mb-16">
      <div class="text-center chapter-reveal delay-400">
        <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-amber-600/20 flex items-center justify-center">
          <span class="font-playfair text-amber-400 text-xl font-medium">1</span>
        </div>
        <p class="text-white font-medium">Share your vision</p>
        <p class="text-stone-400 text-base mt-2">Tell us your dates, interests, and travel style</p>
      </div>
      <div class="text-center chapter-reveal delay-500">
        <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-amber-600/20 flex items-center justify-center">
          <span class="font-playfair text-amber-400 text-xl font-medium">2</span>
        </div>
        <p class="text-white font-medium">We craft your journey</p>
        <p class="text-stone-400 text-base mt-2">A bespoke itinerary designed around your story</p>
      </div>
      <div class="text-center chapter-reveal delay-600">
        <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-amber-600/20 flex items-center justify-center">
          <span class="font-playfair text-amber-400 text-xl font-medium">3</span>
        </div>
        <p class="text-white font-medium">Travel with confidence</p>
        <p class="text-stone-400 text-base mt-2">Expert companions guide you every step</p>
      </div>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-5 chapter-reveal delay-700">
      <!-- WhatsApp primary CTA -->
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="whatsapp-btn"
        aria-label="Start a consultation on WhatsApp"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
        </svg>
        <span>Start a Conversation</span>
      </a>

      <!-- Email secondary CTA -->
      <a
        href={`mailto:${siteConfig.contact.email}?subject=Journey%20Inquiry%20—%20Northeast%20India`}
        class="inline-flex items-center gap-3 px-8 py-4 border border-stone-500 text-stone-300 hover:border-amber-500 hover:text-amber-400 transition-all duration-300 text-base tracking-wide rounded-sm"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span>Write to Us</span>
      </a>
    </div>

    <!-- Trust note -->
    <p class="mt-10 text-stone-500 text-sm chapter-reveal delay-800">
      No obligation. No pressure. Just a conversation about extraordinary travel.
    </p>
  </div>
</section>
